#!/bin/sh


FILE1=/tmp/tzone1-$$
FILE2=/tmp/tzone2-$$
ERROR=/tmp/err-$$

which gdialog 2> /dev/null && DIALOG=gdialog || DIALOG=dialog

end() {

rm -f $FILE $FILE2 $ERROR
exit
}

while true
do
$DIALOG --inputbox "Insert Location (Continent/City):" 8 35 2> $FILE1 || end
if cat $FILE1 | /home/User/TZexercise/timezone > $FILE2 2 > $ERROR
	then
		MSG="Result: 'cat $FILE2'\n\nCOntinue?"
		$DIALOG --yesno "MSG" 7 20 || end
	else
		MSG="Error:\n\n'cat $ERROR'\n\nContinue?"
		$DIALOG --YESNO "MSG" 10 35 || end
	fi
done



